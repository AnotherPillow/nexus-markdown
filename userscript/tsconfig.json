{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Nexus Markdown",

    //https://stackoverflow.com/questions/34474651/typescript-compile-to-single-file

    "_version": "18.2.0",

    "compilerOptions": {
        "lib": ["ES2023", "dom", "ES5", "ES6"],
        // "module": "node16",
        // "module": "AMD",
        "target": "es2022",

        // "outDir": "_build/",
        "outFile": "./build/nmd.user.js",
        "rootDir": "src",

        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },

    "exclude": [
        "old/"
    ],

    "include": [
        "src",
        "node_modules/@violentmonkey/types"
    ]
}